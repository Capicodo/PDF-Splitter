{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ship Monatsbericht to network",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/tools/sync.ps1"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build MonatsberichtTeilen",
      "type": "shell",
      "command": "pyinstaller",
      "args": [
        "--onefile",
        ".\\code\\MonatsberichtTeilen.py"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}